<?xml version="1.0" encoding="UTF-8"?>
<plannerBenchmark>
	<benchmarkDirectory>local</benchmarkDirectory>

	<parallelBenchmarkCount>2</parallelBenchmarkCount>

	<inheritedSolverBenchmark>

		<problemBenchmarks>
			<xStreamAnnotatedClass>domain.TaskAssagnmentSolution</xStreamAnnotatedClass>
			<inputSolutionFile>data/emp-5-task-10.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-5-task-50.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-5-task-100.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-5-task-149.xml</inputSolutionFile>
			
			<inputSolutionFile>data/emp-10-task-10.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-10-task-50.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-10-task-100.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-10-task-149.xml</inputSolutionFile>
			
			<inputSolutionFile>data/emp-50-task-10.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-50-task-50.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-50-task-100.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-50-task-149.xml</inputSolutionFile>
			
			<inputSolutionFile>data/emp-100-task-10.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-100-task-50.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-100-task-100.xml</inputSolutionFile>
			<inputSolutionFile>data/emp-100-task-149.xml</inputSolutionFile>

			<!-- Statistics -->
			<problemStatisticEnabled>true</problemStatisticEnabled>
			<problemStatisticType>BEST_SCORE</problemStatisticType>
			<problemStatisticType>SCORE_CALCULATION_SPEED</problemStatisticType>
			<singleStatisticType>PICKED_MOVE_TYPE_BEST_SCORE_DIFF</singleStatisticType>
			<singleStatisticType>PICKED_MOVE_TYPE_STEP_SCORE_DIFF</singleStatisticType>
		</problemBenchmarks>
		<solver>
			<solutionClass>domain.TaskAssagnmentSolution</solutionClass>
			<entityClass>domain.TaskPartOrEmployee</entityClass>
			<entityClass>domain.TaskPart</entityClass>

			<scoreDirectorFactory>
				<scoreDrl>taskAssignmentScoreRules.drl</scoreDrl>
				<!--<initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>-->
			</scoreDirectorFactory>

			<termination>
				<minutesSpentLimit>1</minutesSpentLimit>
			</termination>

		</solver>
	</inheritedSolverBenchmark>

	<solverBenchmarkBluePrint>
		<solverBenchmarkBluePrintType>EVERY_CONSTRUCTION_HEURISTIC_TYPE_WITH_EVERY_LOCAL_SEARCH_TYPE</solverBenchmarkBluePrintType>
	</solverBenchmarkBluePrint>

</plannerBenchmark>